<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.yonathan.stargeek" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>STARGEEK</name>
    <description>
        To save the Earth you must click on the Asteroids to destroy them. 
        If they hit the bottom you will lose your energy. 
        You have only 6 energy cells!
    </description>
    <author email="yonathan@yonathan.com.br" href="http://stargeek.com.br">
        Yonathan Stein
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="BackgroundColor" value="000"/>
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:https://play.google.com/store/apps/details?id=br.com.yonathan.stargeek" />
        <!--
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="icons/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="icons/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
